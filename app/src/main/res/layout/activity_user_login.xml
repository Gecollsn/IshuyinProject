<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_smoke_f5f5f5"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@drawable/shape_linear_horizon_divider_black33_lpadding55"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="5dp"
        android:showDividers="middle">

        <EditText
            android:drawableLeft="@drawable/user_login_name"
            android:hint="请输入账号"
            style="@style/style_et_user_login"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/user_login_passwd_sure"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:paddingLeft="10dp"
                android:textColorHint="@color/black_33"
                android:textCursorDrawable="@color/black_66"
                android:textSize="@dimen/tv_18"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black_99"
                android:text="忘记密码？"
                android:textSize="@dimen/tv_16"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/ckb_check"
            android:paddingLeft="5dp"
            android:text="记住密码"
            android:textColor="@color/selector_color_normal_black66_selected_green"
            android:textSize="@dimen/tv_18"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:button="@drawable/ckb_check"
            android:paddingLeft="5dp"
            android:text="自动登录"
            android:textColor="@color/selector_color_normal_black66_selected_green"
            android:textSize="@dimen/tv_18"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_green_bg"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_large_size"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_rect_stroke_green"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/green_spring_8dc44c"
        android:textSize="@dimen/tv_large_size"/>
</LinearLayout>