<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/ly_user"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="3dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green_spring_8dc44c">

            <TextView
                android:id="@+id/tv_user_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/main_personal_logo"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="私定"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/ly_user_unLogin"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_rect_stroke_green"
                android:text="注册/登陆"
                android:textColor="@color/black_66"
                android:textSize="14sp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/ly_user_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_user_logo"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:src="@mipmap/main_personal_head"/>

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="bottom"
                    android:text="Gecollsn"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_18"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_user_locate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="location"
                    android:textColor="@color/white_5c"
                    android:textSize="14sp"/>
            </LinearLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>
</merge>