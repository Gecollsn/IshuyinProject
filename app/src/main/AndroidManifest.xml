<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ishuyin.gecollsn">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".accueilBlock.activitys.CentralActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".accueilBlock.activitys.MinePageActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".accueilBlock.activitys.SortPageActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".accueilBlock.activitys.HandpickMoreActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".userBlock.activitys.UserLoginActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".userBlock.activitys.UserRegisterActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".userBlock.activitys.RetrievePasswdActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".userBlock.activitys.ResetPasswdActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".accueilBlock.activitys.DetailPageActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>
