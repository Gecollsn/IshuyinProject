<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context=".accueilBlock.activitys.CentralActivity">

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_tags"/>

    <android.support.v7.widget.CardView
        android:id="@+id/main_tags"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white_smoke_f5f5f5"
        android:clipChildren="false"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_tag_handpick"
                style="@style/tv_wid$0_wei$1_hei$wp_gra$cen"
                android:drawableTop="@drawable/main_tag_excellent"
                android:text="精选"/>

            <TextView
                android:id="@+id/main_tag_sort"
                style="@style/tv_wid$0_wei$1_hei$wp_gra$cen"
                android:drawableTop="@drawable/main_tag_sort"
                android:text="分类"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:scaleType="centerInside"
                android:src="@drawable/layer_list_main_player_btn"/>

            <TextView
                android:id="@+id/main_tag_subscribe"
                style="@style/tv_wid$0_wei$1_hei$wp_gra$cen"
                android:drawableTop="@drawable/main_tag_personal"
                android:text="私定"/>

            <TextView
                android:id="@+id/main_tag_mine"
                style="@style/tv_wid$0_wei$1_hei$wp_gra$cen"
                android:drawableTop="@drawable/main_tag_mine"
                android:text="我的"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>


    <FrameLayout
        android:id="@+id/main_layout_ad"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/main_tags"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"/>
    </FrameLayout>
</RelativeLayout>
