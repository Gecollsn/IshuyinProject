<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_smoke_f5f5f5"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@drawable/shape_linear_horizon_divider_black33_lpadding55"
        android:orientation="vertical"
        android:padding="5dp"
        android:showDividers="middle">

        <EditText
            style="@style/style_et_user_login"
            android:drawableLeft="@drawable/user_login_name"
            android:hint="请输入用户名"/>

        <EditText
            style="@style/style_et_user_login"
            android:drawableLeft="@drawable/user_login_mail"
            android:hint="请输入邮箱"/>
        </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_green_bg"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_large_size"/>
</LinearLayout>