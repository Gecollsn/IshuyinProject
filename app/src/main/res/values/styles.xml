<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="textColor">#ff6666</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="style_tv_global_select_tab">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/tv_middle_low</item>
        <item name="android:textColor">@color/selector_color_normal_black66_selected_green</item>
        <item name="android:drawableBottom">@drawable/selector_press_green_normal_transparent</item>
    </style>

    <style name="style_et_user_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColorHint">@color/black_33</item>
        <item name="android:textCursorDrawable">@color/black_66</item>
        <item name="android:textSize">@dimen/tv_middle_size</item>
    </style>


</resources>
